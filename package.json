{
  "name": "shared-component-builder",
  "version": "1.0.0",
  "description": "A powerful tool for creating, sharing, and reusing web components across projects",
  "main": "dist/component-builder.js",
  "module": "dist/component-builder.esm.js",
  "unpkg": "dist/component-builder.umd.js",
  "types": "dist/component-builder.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "web-components",
    "component-library",
    "shared-components",
    "reusable-components",
    "component-builder",
    "javascript",
    "frontend",
    "ui-components"
  ],
  "author": "Charles Allotey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/shared-component-builder.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/shared-component-builder/issues"
  },
  "homepage": "https://github.com/yourusername/shared-component-builder#readme",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^2.8.8",
    "rollup": "^3.20.0",
    "rollup-plugin-dts": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
